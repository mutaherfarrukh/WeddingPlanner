@model Wedding
@* this page has a weird error on it, but i think its correct. Don't change it *@
<div class="container">
    <h1>Plan Your Wedding</h1>
    <a href="/AllWeddings" class="btn btn-lg btn-info m-3">Home</a>
    <a href="/Logout" class="btn btn-lg btn-secondary m-3">Logout</a>

    <form asp-action="NewWeddingProcess" asp-controller="Home" method="POST">
        <div id="form-group">
            <label asp-for="Wedder1"></label>
            <input asp-for="Wedder1" class="form-control w-50" placeholder="Input Wedder One">
            <span class="alert-danger" asp-validation-for="Wedder1"></span>
        </div>
        <div id="form-group">
            <label asp-for="Wedder2"></label>
            <input asp-for="Wedder2" class="form-control w-50" placeholder="Input Wedder Two">
            <span class="alert-danger" asp-validation-for="Wedder2"></span>
        </div>
        <div id="form-group">
            <label asp-for="WeddingDate"></label>
            <input asp-for="WeddingDate" type="date" class="form-control w-50" placeholder="Input Date">
            <span class="alert-danger" asp-validation-for="WeddingDate"></span>
        </div>
        <div id="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address"  class="form-control w-50" placeholder="Input Address">
            <span class="alert-danger" asp-validation-for="Address"></span>
        </div>
        <input type="submit" class="btn btn-lg btn-primary mt-3" name="Create!">
    </form>
</div>
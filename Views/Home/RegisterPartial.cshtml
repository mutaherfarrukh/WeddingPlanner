@model User 

<div class="container">
    @* <a href="/login" class="btn btn-warning">Need to Login?</a> *@

    <h1>Register A New User</h1>
    <form asp-action="RegisterUser" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control w-50" placeholder="Input First Name">
            <span class="alert-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control w-50" placeholder="Input Last Name">
            <span class="alert-danger" asp-validation-for="LastName"></span>
        </div>
        @* <div class="form-group">
            <label asp-for="Birthday"></label>
            <input asp-for="Birthday" class="form-control w-50" placeholder="Input Birthday">
            <span class="alert-danger" asp-validation-for="Birthday"></span>
        </div> *@
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control w-50" placeholder="Input Email">
            <span class="alert-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control w-50" placeholder="Input Password">
            <span class="alert-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm" class="form-control w-50" placeholder="Input Confirmation">
            <span class="alert-danger" asp-validation-for="Confirm"></span>
        </div>
        <input type="submit" class="btn btn-lg btn-primary mt-3" name="Create!">
    </form>
</div>
